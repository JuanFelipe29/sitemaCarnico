<%= form_with(model: piece, class: "form") do |form| %>
  <% if piece.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(piece.errors.count, "error") %> prohibited this piece from being saved:</h2>

      <ul>
        <% piece.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.hidden_field :channel_id %>
  </div>

  <div class="form-group">
    <%= form.label :piece_name_id, "Nombre de Pieza" ,class: "form-label" %>
    <%= form.collection_select :piece_name_id, PieceName.order(:name), :id, :name, { prompt: 'Seleccione la Pieza' }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :lot, "Lote" ,class: "form-label" %>
    <%= form.text_field :lot, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :weight, "Peso" ,class: "form-label" %>
    <%= form.number_field :weight, class: "form-control" %>
  </div>

  <div id="additional-fields">
    <!-- Campos adicionales se agregarán aquí -->
  </div>

  <div class="form-group">
    <%= form.button "+ Agregar", type: "button", id: "add-fields", class: "btn btn-primary" %>
    <%= form.submit "Guardar", class: "btn btn-success" %>
  </div>
<% end %>

