<script>
  $(document).ready(function() {
    console.log("Hola mundo");
    var i = 1;
    var channel_id = $("input[name='piece[channel_id]']").val();

    $("#add-fields").click(function() {
      var html = `
        <div>
          <label for="piece_channel_id_${i}" style="display:none;">ID del canal</label>
          <input type="text" name="piece[additional_fields][${i}][channel_id]" id="piece_channel_id_${i}" class="form-control" value="${channel_id}">
        </div>
        <div class="form-group">
          <label for="piece_piece_name_id_${i}" style="display:block;">ID del nombre de la pieza</label>
          <select name="piece[additional_fields][${i}][piece_name_id]" id="piece_piece_name_id_${i}" class="form-control">
            <%= options_for_select(PieceName.order(:name).pluck(:name, :id), { prompt: 'Seleccione la Pieza' }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="piece_lot_${i}" style="display:block;">Lote</label>
          <input type="text" name="piece[additional_fields][${i}][lot]" id="piece_lot_${i}" class="form-control">
        </div>
        <div class="form-group">
          <label for="piece_weight_${i}" style="display:block;">Peso</label>
          <input type="number" name="piece[additional_fields][${i}][weight]" id="piece_weight_${i}" class="form-control">
        </div>
      `;
      $("#additional-fields").append(html);
      i++;
    });
  });
</script>
