<p style="color: green"><%= notice %></p>

<h1 class="h3 mb-2 text-gray-800">Historico de Ventas</h1>
<br />
<%= link_to "Agregar Registro", "#modal-history", class: "btn btn-primary", data: { toggle: "modal" } %>
<br />
<br />
<div id="histories">
      
      <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="" width="100%" cellspacing="0">
                    <thead>
                       <tr>
                           <th>Codigo</th>
                           <th>Fecha</th>
                           <th>Prov/Cli</th>
                           <th>Serie/lote</th>
                           <th>Art√≠culo</th>
                       </tr>
                    </thead>
                    <tbody>
                        <% @histories.each do |history| %>
                             <tr id="Historico_<%= history.id %>" >
                                <td><%= history.code %></td>
                                <td><%= history.date %></td>
                                <td><%= history.client %></td>
                                <td><%= history.lot %></td>
                                <td><%= history.item %></td>
                             </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



</div>


<div class="modal fade" id="modal-history" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Ingreso de Historico</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'form', history: History.new %>
      </div>
      <div class="modal-footer">
        
      </div>
    </div>
  </div>
</div>
